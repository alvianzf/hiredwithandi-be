generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id                  String       @id @default(uuid())
  userId              String
  company             String
  position            String
  url                 String?
  salary              String?
  notes               String?
  workType            WorkType     @default(ONSITE)
  location            String?
  finalOffer          String?
  benefits            String?
  nonMonetaryBenefits String?
  jobFitPercentage    Float        @default(0)
  dateApplied         DateTime     @default(now())
  statusChangedAt     DateTime     @default(now())
  status              String
  boardPosition       Float        @default(0)
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
  user                User         @relation(name: "UserToJobs", fields: [userId], references: [id])
  history             JobHistory[] @relation(name: "JobToHistory")

  @@index([userId])
  @@index([status])
  @@index([dateApplied])
  @@index([boardPosition])
}

model JobHistory {
  id        String    @id @default(uuid())
  jobId     String
  status    String
  enteredAt DateTime  @default(now())
  leftAt    DateTime?
  job       Job       @relation(name: "JobToHistory", fields: [jobId], references: [id], onDelete: Cascade)

  @@index([jobId])
  @@index([status])
}

model Organization {
  id        String             @id @default(uuid())
  name      String             @unique
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  status    OrganizationStatus @default(ACTIVE)
  users     User[]             @relation(name: "OrgToUsers")
  batches   Batch[]            @relation(name: "OrgToBatches")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  passwordHash String?
  name         String
  role         Role          @default(MEMBER)
  status       UserStatus    @default(ACTIVE)
  orgId        String?
  batchId      String?
  bio          String?
  location     String?
  linkedIn     String?
  avatarUrl    String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  lastLogin    DateTime?
  jobs         Job[]         @relation(name: "UserToJobs")
  organization Organization? @relation(name: "OrgToUsers", fields: [orgId], references: [id], onDelete: Cascade)
  batch        Batch?        @relation(name: "BatchToUsers", fields: [batchId], references: [id], onDelete: SetNull)

  @@index([orgId])
  @@index([batchId])
  @@index([role])
}

enum OrganizationStatus {
  ACTIVE
  DISABLED
}

enum Role {
  SUPERADMIN
  ADMIN
  MEMBER
}

enum UserStatus {
  ACTIVE
  DISABLED
}

enum WorkType {
  REMOTE
  ONSITE
  HYBRID
}

model Batch {
  id           String       @id @default(uuid())
  name         String
  orgId        String
  organization Organization @relation(name: "OrgToBatches", fields: [orgId], references: [id], onDelete: Cascade)
  users        User[]       @relation(name: "BatchToUsers")
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@unique([name, orgId]) // Batch names should be unique within an organization
  @@index([orgId])
}
